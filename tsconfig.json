{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "baseUrl": "./src",
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "pretty": true,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "incremental": true,
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "jsx": "react",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./custom.d.ts",
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "fuse.ts",
    "dist",
    ".fusebox"
  ]
}
