{
  "extends": [
    "tslint:recommended",
    "tslint-react"
  ],
  "linterOptions": {
    "exclude": [
      "src/**/*.d.ts"
    ]
  },
  "rules": {
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "jsx-wrap-multiline": false,
    "jsx-no-multiline-js": false,
    "jsx-no-lambda": false,
    "no-empty": false
  }
}